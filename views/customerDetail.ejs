<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Customer Profile</title>
</head>
<body>
  <%- include('partials/_navbar', { userId, role }) %>
  <%- include('partials/_footer', { title: 'JualMobil.com' }) %> 
  <h1>Customer Profile</h1>
  <% const { firstName, lastName, age, phoneNumber, address, balance, UserId, picture } = customer %>
  <% if (firstName !== '-' && lastName !== '-') { %>
    <h2>Welcome, <%= firstName %> <%= lastName %>!</h2>
    <img src="<%= picture %>">
    <br><br>
    <a href="/updateUser/<%= userId %>"><button>Update Profile</button></a>
    <h3>Your information</h3>
    <a href="/Customer/<%= userId %>/cart"><button>My Cart</button></a>
    <a href="/Customer/<%= userId %>/transaction"><button>My Transaction</button></a>
    <p>Age: <%= age %></p>
    <p>Phone Number: <%= phoneNumber %></p>
    <p>Address: <%= address %></p>
    <p>
      Balance: <%= currencyFormat(balance) %>
      <a href="/customer/<%= userId %>/topup"><button>Top Up</button></a>
    </p>
  <% } else { %>
    <h2>Welcome to our Shop!</h2>
    <p>Please consider updating your profile</p>
    <a href="/updateUser/<%= userId %>"><button>Update Profile</button></a>
  <% } %>
</body>
</html>